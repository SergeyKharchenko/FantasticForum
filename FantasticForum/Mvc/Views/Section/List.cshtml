@using System.Configuration
@model IEnumerable<Mvc.ViewModels.SectionListVM>

@{
    ViewBag.Title = "Fantastic Forum";
}

@ConfigurationManager.AppSettings.Get("MONGOLAB_URI")

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (@item.Image != null)
            {
                <img src="@item.Image.FileName" alt="@item.Title" width="24" height="24"/>
            }
            else
            {
                <img src="~/Images/Section/section-without-avatar.png" alt="@item.Title" width="24" height="24"/>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
